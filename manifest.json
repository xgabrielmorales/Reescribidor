{
  "manifest_version": 2,
  "name": "Reescribidor",
  "version": "0.1",
  "description": "Firefox extension that rewrites the selected text using the OpenAI API. ",
  "permissions": ["contextMenus", "activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
